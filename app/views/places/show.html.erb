<div class="text-center">
  <h1><%= @place["name"] %></h1>
</div>



<div class="text-center" >
  <h3 class="mt-3">Fun Things in <%= @place["name"]%></h3>
</div>
<p>
</p>
<div class="container">
  <div class="row">
<% for entry in @entries %>
  <div class="col-md-4 pt-3">
        <h3><%= entry["title"] %></h3>
        <h6><%= entry["occurred_on"] %></h6>
    <% if entry.uploaded_image.attached? %>
      <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
    <% else %>
      <img src="<%= entry["image"] %>" class="img-fluid">
    <% end %>
        <p class="mt-2"><%= entry["description"] %></p>
  </div>
<% end %>

<p class="mt-3">
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary" class="text-start">New Entry</a>
</p>

<p>
  <a href="/places" class="btn btn-primary" class="text-start">Back to All Places</a>
</p>
